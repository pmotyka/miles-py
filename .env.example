# Miles Aggregator Configuration Template
# Copy this file to .env and fill in your actual values

# Peloton API Configuration
# Get these values from your browser cookies when logged into Peloton
PELOTON_USER_ID=your_peloton_user_id_here
PELOTON_SESSION_ID=your_peloton_session_id_here

# Strava API Configuration
# Create a Strava API application at https://www.strava.com/settings/api
STRAVA_CLIENT_ID=your_strava_client_id_here
STRAVA_CLIENT_SECRET=your_strava_client_secret_here
STRAVA_REFRESH_TOKEN=your_strava_refresh_token_here
STRAVA_ATHLETE_ID=your_strava_athlete_id_here

# Google Cloud Storage Configuration
GCS_BUCKET_NAME=your_gcs_bucket_name_here
GCS_CREDENTIALS_PATH=path/to/your/service-account-key.json

# Optional Configuration (with defaults)
TIMEZONE=UTC
CACHE_DIR=.cache
LOG_LEVEL=INFO
API_TIMEOUT=30
CACHE_EXPIRY_HOURS=24